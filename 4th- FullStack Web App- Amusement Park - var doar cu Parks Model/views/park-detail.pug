extends layout.pug
block content
  h3= park.parkName
  div
    ul
      li Location: #{park.city}, #{park.provinceState} #{park.country}
      li Opened: #{park.opened}
      li Size: #{park.size}
  div
    p= park.description
  div  
    a.btn.btn-primary.ml-2(href=`/park/edit/${park.id}` role='button') Edit
    a.btn.btn-danger.ml-2(href=`/park/delete/${park.id}`) Delete
    a.btn.btn-warning.ml-2(href='/parks') Return to List