extends layout.pug

block content 

  h3= park.parkName
  div
    p Proceed with deleting this park?
  div  
    form(method='post' action=`/park/delete/${park.id}`)
      input(type='hidden', name='_csrf' value= csrfToken)
      button.btn.btn-danger(type='submit') Delete Park
      a.btn.btn-warning.ml-2(href=`/park/${park.id}`) Cancel